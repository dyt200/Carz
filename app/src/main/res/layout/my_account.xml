<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_marginStart="10pt"
    android:layout_marginTop="10pt"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/display_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Space
                    android:id="@+id/align"
                    android:layout_width="30pt"
                    android:layout_height="0dp"
                    android:layout_marginStart="100dp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textLight"
                    android:layout_marginBottom="10pt"
                    android:text="@string/test"/>
                <TextView
                    android:id="@+id/first_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/firstNameCreate"
                    android:layout_below="@id/email"/>
                <TextView
                    android:id="@+id/first_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/align"
                    android:layout_alignBottom="@id/first_name_label"
                    android:text="@string/test"
                    android:textSize="20sp"
                    android:layout_below="@id/email"/>
                <TextView
                    android:id="@+id/last_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_below="@id/first_name_label"
                    android:text="@string/lastNameCreate"/>
                <TextView
                    android:id="@+id/last_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_name_edit"
                    android:layout_toEndOf="@+id/align"
                    android:textSize="20sp"
                    android:text="@string/test"/>
                <Button
                    android:id="@+id/my_cars_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/last_name_edit"
                    android:text="@string/myCars"
                    android:layout_marginTop="20pt"
                    android:gravity="center" />
                <Button
                    android:id="@+id/logout_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_cars_btn"
                    android:text="@string/logOut"
                    android:gravity="center" />
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/edit_mode"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Space
                    android:id="@+id/align_2"
                    android:layout_width="50pt"
                    android:layout_height="0dp"
                    android:layout_marginStart="100dp"/>
                <TextView
                    android:id="@+id/email_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10pt"
                    android:textColor="@color/textLight"
                    android:textSize="20sp"
                    android:text="@string/test"/>
                <TextView
                    android:id="@+id/first_name_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/firstNameCreate"
                    android:layout_below="@id/email_2"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/first_name_edit_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/align_2"
                    android:layout_alignBottom="@id/first_name_label_2"
                    android:layout_marginEnd="20sp"
                    android:text="@string/test"/>
                <TextView
                    android:id="@+id/last_name_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_name_label_2"
                    android:text="@string/lastNameCreate"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/last_name_edit_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/last_name_label_2"
                    android:layout_toEndOf="@+id/align_2"
                    android:layout_marginEnd="20sp"
                    android:text="@string/test"/>
                <Space
                    android:id="@+id/middle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20pt"
                    android:layout_below="@id/last_name_label_2"/>
                <TextView
                    android:id="@+id/password_1_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/middle"
                    android:text="@string/passwordCreate"
                    android:textSize="20sp"
                    android:labelFor="@id/password_1_edit"/>
                <EditText
                    android:id="@+id/password_1_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/align_2"
                    android:layout_alignBottom="@id/password_1_label"
                    android:layout_marginEnd="20sp"
                    android:inputType="textPassword"/>
                <TextView
                    android:id="@+id/password_2_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password_1_label"
                    android:text="@string/passwordCreate2"
                    android:textSize="20sp"
                    android:labelFor="@+id/password_2_edit"/>
                <EditText
                    android:id="@+id/password_2_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:layout_toEndOf="@id/align_2"
                    android:layout_marginEnd="20sp"
                    android:layout_alignBottom="@id/password_2_label"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="invisible"
        android:id="@+id/save_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/save_icon"
        android:onClick="saveUser"
        app:maxImageSize="40dp"/>
</RelativeLayout>