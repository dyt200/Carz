<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/emailCreate"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/email_label"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"/>
        <TextView
            android:id="@+id/firstName_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/firstNameCreate"/>
        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/firstName_label"
            android:hint="@string/firstName_hint"
            android:inputType="text"/>
        <TextView
            android:id="@+id/lastName_label"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/firstName"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/lastNameCreate"/>
        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/lastName_label"
            android:hint="@string/lastName_hint"
            android:inputType="text"/>
        <TextView
            android:id="@+id/pass1_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastName"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/passwordCreate"/>
        <EditText
            android:id="@+id/pass1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/pass1_label"
            android:hint="@string/pass1_hint"
            android:textStyle="bold"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/pass2_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/passwordCreate2"/>
        <EditText
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/pass2_label"
            android:hint="@string/pass2_hint"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/address1_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/addressCreate"/>
        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/address1_label"
            android:hint="@string/address_hint"
            android:inputType="textMultiLine"/>
        <TextView
            android:id="@+id/telephone_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address1"
            android:text="@string/telephoneCreate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/telephone_label"
            android:hint="@string/telephone_hint"
            android:inputType="phone"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/telephone"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_below="@+id/telephone"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="@string/submit"
            android:onClick="createUser"/>
    </RelativeLayout>
</ScrollView>
